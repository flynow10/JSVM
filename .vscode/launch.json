  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\main.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program with Args",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\main.js",
      "args": ["./assembler/program.bin"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Assembler",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\assembler\\main.js",
      "args": ["./assembler/program.asm"]
    }
  ]
}
